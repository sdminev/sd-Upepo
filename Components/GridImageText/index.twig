<div class="flyntComponent componentSpacing {{ options.theme }} {{ options.card ? 'layoutCard' }}" is="flynt-grid-image-text">
  <div class="container centerMaxWidthContainer">
    {% if preContentHtml %}
      <div class="preContent">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <ul class="grid grid--columns{{ options.columns }}">
      {% for item in items %}
        {% if item.image or item.contentHtml %}
          <li class="grid-item">
            <div class="content {{ options.card == 'layoutCard' ? 'boxRadius boxShadow themeReset' }}
            {{ options.card == 'layoutCard' and options.theme != 'themeDark' }}">
              {% if item.image %}
                <img is="flynt-image" class="content-image {{ options.card != 'layoutCard' ? 'boxRadius' }}"
                  src="{{ item.image.src|resizeDynamic(424, 283) }}"
                  srcset="{{ placeholderImage(3, 2) }}"
                  data-src="{{ item.image.src|generateRiasUrl() }}"
                  data-aspectratio="1.5"
                  alt="{{ item.image.alt|e }}">
              {% endif %}
              {% if item.contentHtml %}
                <div class="content-inner {{ options.card == 'layoutCard' ? 'boxPadding' }}">
                  {{ item.contentHtml|e('wp_kses_post') }}
                </div>
              {% endif %}
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>
