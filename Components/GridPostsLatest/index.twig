{% if items|length > 0 %}
  <div class="flyntComponent componentSpacing {{ options.theme }}" is="flynt-grid-posts-latest">
    <div class="container centerMaxWidthContainer">
      {% if preContentHtml %}
        <div class="preContent">
          {{ preContentHtml|e('wp_kses_post') }}
        </div>
      {% endif %}
      <ul class="grid grid--columns{{ options.columns }}">
        {% for item in items %}
          <li class="grid-item">
            <div class="post boxShadow boxRadius themeReset">
              <a class="post-link" href="{{ item.link }}" aria-label="{{ item.title }}">
                {% if item.thumbnail %}
                  <figure class="figure">
                    <img is="flynt-image" class="post-image figure-image"
                      src="{{ item.thumbnail.src|resizeDynamic(424, 283) }}"
                      srcset="{{ placeholderImage(3, 2) }}"
                      data-src="{{ item.thumbnail.src|generateRiasUrl(null, 0) }}"
                      data-aspectratio="1.5"
                      alt="{{ item.title }}">
                  </figure>
                {% endif %}
                <div class="post-inner boxPadding">
                  <h3 class="post-title">{{ item.title }}</h3>
                  <p class="post-excerpt">{{ item.preview.read_more(false) }}</p>
                </div>
                <footer class="post-footer">
                  <span class="post-readingTime">
                    <i data-feather="clock"></i> {{ labels.readingTime|replace({'%': item.content|readingtime}) }}
                  </span>
                  <span class="button button--link post-readMore">{{ labels.readMore }}</span>
                </footer>
              </a>
            </div>
          </li>
        {% endfor %}
      </ul>
      <div class="allPostsLink">
        <a href="{{ postTypeArchiveLink }}" class="button button--link">{{ labels.allPosts }}</a>
      </div>
    </div>
  </div>
{% endif %}
